# AegisPCAP Integration Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# THREAT INTELLIGENCE
# ============================================================================

# VirusTotal
VT_ENABLED=true
VT_API_KEY=your_virustotal_api_key_here

# AlienVault OTX
AV_ENABLED=true
AV_API_KEY=your_alienvault_api_key_here

# ============================================================================
# NOTIFICATIONS
# ============================================================================

# Slack
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts

# Microsoft Teams
TEAMS_ENABLED=true
TEAMS_WEBHOOK_URL=https://outlook.webhook.office.com/webhookb2/YOUR/WEBHOOK/URL

# Discord
DISCORD_ENABLED=true
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/YOUR/WEBHOOK/URL

# Email
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ============================================================================
# TICKETING
# ============================================================================

# Jira
JIRA_ENABLED=true
JIRA_URL=https://jira.your-company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=SEC
JIRA_USERNAME=api

# ServiceNow
SNOW_ENABLED=true
SNOW_URL=https://dev12345.service-now.com
SNOW_USER=api_user
SNOW_PASSWORD=api_password

# ============================================================================
# FIREWALL
# ============================================================================

# Options: pfsense, fortinet, checkpoint
FIREWALL_TYPE=pfsense
FIREWALL_HOST=https://192.168.1.1:8443
FIREWALL_API_KEY=your_firewall_api_key
FIREWALL_API_SECRET=your_firewall_api_secret
FIREWALL_VERIFY_SSL=true

# ============================================================================
# DATABASE
# ============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aegispcap

# ============================================================================
# REDIS
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# API SERVER
# ============================================================================

DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000
DASHBOARD_WORKERS=4
ENV=development
